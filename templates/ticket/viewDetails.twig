{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Club</th>
                <td>{{ ticket.author }}</td>
            </tr>
            <tr>
                <th>État</th>
                <td>{{ ticket.etat }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ ticket.message|raw }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('Ticket.show') }}" class="btn btn-primary"><i class="fas fa-boxes"></i> Boîte de réception</a>
    {% if is_granted("ROLE_USER") %}
        <a href="{{ path('Ticket.edit', {'id': ticket.id}) }}" class="btn btn-warning">Modifier</a>
	{% endif %}



{% endblock %}
