<!DOCTYPE html>
<html class="has-navbar-fixed-top">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Bienvenue !{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('bootstrap-4.1.3/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('jquery-ui-1.12.1/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/GoogleFont/Montserrat.css') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/creative.css') }}">
    {% endblock %}
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>

{% block navigation %}
    {% include 'navbar.html.twig' %}
{% endblock %}

{% block content %}
    <div class="container text-center jumbotron" style="margin-top: 100px;">

        {% block flashMessage %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show mb-4" role="alert">
                        <strong>{{ message }}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block body %}{% endblock %}
    </div>
{% endblock %}

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="{{ asset('Js/jquery.min.js') }}"></script>
<script src="{{ asset('Js/popper.min.js') }}"></script>
<script src="{{ asset('bootstrap-4.1.3/js/bootstrap.min.js') }}"></script>
<script defer src="{{ asset('fontawesome/js/all.min.js') }}"></script>

<script src="{{ asset('jquery-ui-1.12.1/jquery-ui.min.js') }}"></script>

{# CKEDITOR #}
<script src="{{ asset('ckeditor/ckeditor.js') }}"></script>
{% block javascripts %}
    <script type="text/javascript">
        $(function () {
            $('textarea.ckeditor').ckeditor();
        });
        $('.js-datepicker').datepicker({
            dateFormat: 'dd-mm-yy',
            buttonImageOnly: true,
            changeMonth: true,
            changeYear: true,
        });
        $("input[type=file]").change(function () {
            var fieldVal = $(this).val();

            // Change the node's value by removing the fake path (Chrome)
            fieldVal = fieldVal.replace("C:\\fakepath\\", "");

            if (fieldVal != undefined || fieldVal != "") {
                $(this).next(".custom-file-label").attr('data-content', fieldVal);
                $(this).next(".custom-file-label").text(fieldVal);
            }

        });
    </script>
{% endblock %}
</body>
</html>



