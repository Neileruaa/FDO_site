<div class="modal fade" id="T{{ team.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Détails équipe : {{ team.numDossard }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="overflow: auto;">
                {% if team.dances is not empty %}
                <strong>Catégorie</strong></br>
                    {{ team.getCategory().nameCategory }}
                <hr>
                <strong>Liste des danses</strong></br>
                    {% for dance in team.dances %}
                        {{ dance.nameDance }}
                        <br>
                    {% endfor %}
                    {% else %}
                        <p>Pas de danse pour cette équipe</p>
                {% endif %}
                <hr>
                <strong>Membre(s) de l'équipe</strong></br>
                {% for dancer in team.dancers %}
                    {{ dancer.nameDancer }} {{ dancer.firstNameDancer }} | {{ dancer.dateBirthDancer|date('d-m-Y') }}
                    <br>
                {% else %}
                    <p>Pas de danseur dans cette équipe</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>