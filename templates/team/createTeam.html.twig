{% extends 'layout.html.twig' %}

    {% block header %}
        <header class="page-header">
            <h1 class="text-uppercase">
                <strong>France Dance Organisation</strong>
            </h1>
            <hr>
        </header>
    {% endblock %}

{% block body %}
    <div class="container">
        <h1>Création d'équipe</h1><br>
        {% include 'team/modalCreateTeam.html.twig' %}
        <a href="#" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalCenter">Ajouter une équipe</a>
        <hr>
        {% for team in club.teams if club.teams is not empty %}
            Equipe{{ team.id }}|<a href="{{ path('Team.show', {'id': team.id}) }}">Voir</a><br>
        {% else %}
            <p>Pas de d'équipe dans ce club</p>
        {% endfor %}
        <a href="#myModal" class="trigger-btn" data-toggle="modal">Supprimer toutes les équipes</a>
    </div>

    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Êtes-vous sûr ?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous vraiment sûr de vouloir supprimer toutes les équipes ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">Annuler</button>
                    <a href="{{ path('Team.deleteAll') }}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

