{% extends 'base.html.twig' %}

{% block body %}
    {% block header %}
        <header class="page-header mt-5">
            <hr>
        </header>
    {% endblock %}
    <div class="container">
        <h1>Page d'impression de PDF</h1>
        {% for team in user.teams if user.teams is not empty %}
            <p>
                <a href="{{ path('Dossard.choose', {id: team.id}) }}"> Dossards de l'équipe : {{ team.id }}</a>
            </p>
        {% else %}
            <p>Il vous faut créer une équipe</p>
        {% endfor %}
    </div>
{% endblock %}

